<%= provide(:title, 'Search flights')%>

<%= form_for :search, method: 'get', url: flights_path do |f| %>
    <div class='form-row'>
        <div class='col'>
            <%= f.label 'Leaving From:'%>
            <%= f.collection_select(:start_airport_id, Airport.all, :id, :code) %>
        </div>
        <div class='col'>
            <%= f.label 'Going to :'%>
            <%= f.collection_select(:finish_airport_id, Airport.all, :id, :code) %>
        </div>
    </div>
    <div class='form-row'>
        <div class='col'>
            <%= f.label 'Date :'%>
            <%= f.select(:date, @dates)%>
        </div>
    </div>
    <div class='form-row'>
        <%= f.submit 'Search', class: 'btn btn-primary col-md-4 offset-md-4'%>
    </div>
<% end %>
<hr>
<%= render @flights if @flights%>
